---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Hem' },
  { href: '/traning', label: 'Tr√§ning' },
  { href: '/kontakt', label: 'Kontakt' },
  { href: '/medlem', label: 'Medlem' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-paper)]/95 backdrop-blur-sm">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 md:px-8">
    <nav class="flex items-center justify-between h-20 md:h-24">
      <!-- Logo -->
      <a href="/" class="group flex items-center gap-4 flex-shrink-0">
        <div class="relative">
          <img
            src="/images/logo2014.webp"
            alt="Eskilstuna Ki-Aikido logotyp"
            class="h-10 md:h-12 w-auto transition-transform duration-500 group-hover:scale-105"
          />
        </div>
        <div class="hidden md:block">
          <span class="block text-sm tracking-[0.2em] uppercase font-light">
            Eskilstuna
          </span>
          <span class="block text-xs tracking-[0.3em] uppercase opacity-60">
            Ki-Aikido
          </span>
        </div>
      </a>

      <!-- Navigation -->
      <ul class="flex items-center">
        {navLinks.map((link) => {
          const isActive = currentPath === link.href;
          return (
            <li>
              <a
                href={link.href}
                class:list={[
                  'relative block px-2 sm:px-3 md:px-4 py-2 text-xs sm:text-sm tracking-wide sm:tracking-wider transition-colors duration-300',
                  isActive
                    ? 'text-[var(--color-ink)]'
                    : 'text-[var(--color-ink)]/60 hover:text-[var(--color-ink)]',
                ]}
              >
                {link.label}
                {isActive && (
                  <span class="absolute bottom-1 left-2 right-2 sm:left-3 sm:right-3 md:left-4 md:right-4 h-px bg-[var(--color-ink)]" />
                )}
              </a>
            </li>
          );
        })}
        <li>
          <a
            href="/admin"
            class:list={[
              'relative block px-2 sm:px-3 md:px-4 py-2 transition-colors duration-300',
              currentPath === '/admin'
                ? 'text-[var(--color-ink)]'
                : 'text-[var(--color-ink)]/40 hover:text-[var(--color-ink)]/70',
            ]}
            title="Admin"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {currentPath === '/admin' && (
              <span class="absolute bottom-1 left-2 right-2 sm:left-3 sm:right-3 md:left-4 md:right-4 h-px bg-[var(--color-ink)]" />
            )}
          </a>
        </li>
      </ul>
    </nav>
  </div>

  {/* Subtle wavy bottom border */}
  <svg class="absolute bottom-0 left-0 right-0 w-full h-2" preserveAspectRatio="none" viewBox="0 0 1200 8">
    <path d="M0,4 Q300,2 600,4 T1200,4" fill="none" stroke="var(--color-stone)" stroke-width="1" />
  </svg>
</header>

{/* Spacer for fixed header */}
<div class="h-20 md:h-24" />
