---
import BaseLayout from '../layouts/BaseLayout.astro';

const faq = [
  {
    fraga: 'Kan man provträna?',
    svar: 'Absolut! Du är välkommen att prova på gratis i några veckor innan du bestämmer dig. Kom i bekväma kläder du kan röra dig i — ingen utrustning behövs.',
  },
  {
    fraga: 'Var ligger dojon?',
    svar: 'Vi tränar i Munktellarenan, Verkstadsgatan 5 i Eskilstuna. Dojon ligger på andra våningen i hörnet mot bron/slussen. Omklädningsrum finns i byggnaden.',
  },
  {
    fraga: 'Hur betalar jag?',
    svar: 'Swisha till 123 528 37 18 (Eskilstuna Ki-Aikido) eller sätt in på plusgirokonto 837 09 82-4. Du kan även betala via ePassi eller Fritidskortet.se. Skriv vad och vem betalningen gäller.',
  },
  {
    fraga: 'Behöver jag köpa utrustning direkt?',
    svar: 'Nej, under provperioden tränar du i vanliga träningskläder. När du vill fortsätta hjälper vi dig beställa en träningsdräkt (gi) via klubben.',
  },
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faq.map((item) => ({
    "@type": "Question",
    "name": item.fraga,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.svar,
    },
  })),
};
---

<BaseLayout
  title="Kontakt – Eskilstuna Ki-Aikido"
  description="Kontakta Eskilstuna Ki-Aikido. Adress, telefon och kontaktformulär."
  currentPath="/kontakt"
  schema={faqSchema}
>
  {/* Hero */}
  <section class="relative py-20 md:py-28 overflow-hidden">
    {/* Background image - bokken crossed swords */}
    <div class="absolute inset-0">
      <img
        src="/images/jela_aiki_2022_uppsala-6056.webp"
        alt=""
        class="w-full h-full object-cover opacity-[0.06]"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-paper)] via-[var(--color-paper)]/90 to-[var(--color-paper)]" />
    </div>

    <div class="max-w-4xl mx-auto px-6 md:px-8 text-center fade-up">
      <h1 class="text-4xl md:text-5xl font-serif mb-4">Kontakt</h1>
      <p class="text-lg text-gray-600 max-w-lg mx-auto">
        Hör av dig om du har frågor eller vill börja träna.
      </p>
    </div>
  </section>

  {/* Content */}
  <section class="max-w-4xl mx-auto px-6 md:px-8 pb-16">
    <div class="grid gap-8 md:grid-cols-2 stagger-children">
      {/* Contact Info */}
      <div class="card-zen p-8">
        <h2 class="font-serif text-xl mb-6">Hitta hit</h2>

        <ul class="space-y-6">
          <li>
            <p class="text-sm text-gray-500 mb-1">Adress</p>
            <a
              href="https://goo.gl/maps/xrVzPPVFW3n"
              target="_blank"
              rel="noopener noreferrer"
              class="link-zen text-lg"
            >
              Munktellarenan, Verkstadsgatan 5, Eskilstuna
            </a>
          </li>

          <li>
            <p class="text-sm text-gray-500 mb-1">E-post</p>
            <a
              href="mailto:etuna.aikido@gmail.com"
              class="link-zen text-lg"
            >
              etuna.aikido@gmail.com
            </a>
          </li>

          <li>
            <p class="text-sm text-gray-500 mb-1">Telefon</p>
            <a
              href="tel:+46706816183"
              class="link-zen text-lg"
            >
              070-681 61 83
            </a>
          </li>
        </ul>
      </div>

      {/* Contact Form */}
      <div class="card-zen p-8">
        <h2 class="font-serif text-xl mb-6">Skicka meddelande</h2>

        <form
          action="https://formspree.io/f/xzovbojm"
          method="POST"
          class="space-y-5"
        >
          <div>
            <label for="name" class="block text-sm text-gray-600 mb-2">
              Namn
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-[var(--color-paper)] border border-[var(--color-stone)] focus:border-[var(--color-ink)] focus:outline-none transition-colors"
            />
          </div>

          <div>
            <label for="email" class="block text-sm text-gray-600 mb-2">
              E-post
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-[var(--color-paper)] border border-[var(--color-stone)] focus:border-[var(--color-ink)] focus:outline-none transition-colors"
            />
          </div>

          <div>
            <label for="message" class="block text-sm text-gray-600 mb-2">
              Meddelande
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 bg-[var(--color-paper)] border border-[var(--color-stone)] focus:border-[var(--color-ink)] focus:outline-none transition-colors resize-none"
            ></textarea>
          </div>

          <button type="submit" class="btn-zen w-full">
            Skicka
          </button>
        </form>
      </div>
    </div>
  </section>

  {/* Divider */}
  <div class="divider-zen" />

  {/* FAQ */}
  <section class="max-w-4xl mx-auto px-6 md:px-8 pb-20">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl font-serif">Vanliga frågor</h2>
    </div>

    <div class="space-y-4 stagger-children">
      {faq.map((item) => (
        <details class="card-zen group">
          <summary class="p-6 cursor-pointer flex items-center justify-between hover:bg-[var(--color-stone)]/30 transition-colors">
            <h3 class="font-medium">{item.fraga}</h3>
            <svg
              class="w-5 h-5 opacity-40 transition-transform duration-300 group-open:rotate-45"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4" />
            </svg>
          </summary>
          <div class="px-6 pb-6 pt-0">
            <p class="text-gray-600 leading-relaxed">{item.svar}</p>
          </div>
        </details>
      ))}
    </div>
  </section>
</BaseLayout>
